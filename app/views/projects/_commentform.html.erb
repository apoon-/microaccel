<h1> Add a Comment </h1>

<% if current_user %>

<%= form_for([@project, @discussion], :remote => true) do |f| %>
  <% if @discussion.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@discussion.errors.count, "error") %> prohibited this comment from being saved:</h2>

        <ul>
        <% @discussion.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label "Comment: " %>
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  <% else %>
  <p>Please <%= link_to "Log In", new_session_path %> to add a comment.</p>
  <% end %>